<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Crafts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Crafts.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-pink fw-bold " asp-area="" asp-controller="Home" asp-action="Index">KHUMALO Crafts</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-pink fw-bold " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-pink fw-bold " asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-pink fw-bold " asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item">
                                <a class="text-pink nav-link fw-bold  " asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                            </li>

                            <li class="nav-item">
                                <a class="text-pink nav-link fw-bold  " asp-area="" asp-controller="Home" asp-action="MyWork">My Work</a>
                            </li>
                            <!-- Cart link -->
                            <div class="text-end">
                                <a class="text-pink nav-link fw-bold" asp-area="" asp-controller="Cart" asp-action="Index">
                                    <i class="fas fa-shopping-cart"></i> Cart
                                    <span class="badge bg-primary"></span> <!-- Display the number of items in the cart -->
                                </a>
                            </div>
                            <li class="nav-item">
                                <a class="text-black nav-link fw-bold  " asp-area="" asp-controller="Order" asp-action="OrderSummary">Order History</a>
                            </li>

                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-white">
        <div class="container">
            <div class=" row">
                <div class=" col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <h4>KHUMALO Crafts</h4>
                    <p> Stronger, Smooth And Faster</p>
                </div>
                <div class=" col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <h4>Contact US</h4>

                    <div class=" mt-3">
                        <span> <i class="fa-brands fa-instagram fs-4"></i> Instagram</span>
                    </div>
                    <div>
                        <span> <i class="fa-brands fa-whatsapp fs-4"></i> WhatsApp</span>
                    </div>
                    <div>
                        <span> <i class="fa-brands fa-facebook fs-4"></i> FaceBook</span>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
