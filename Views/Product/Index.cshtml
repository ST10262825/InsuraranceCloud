<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            color: dimgrey; /* Text color */
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 0 20px;
        }

        h1 {
            text-align: center;
            color: darkkhaki; /* Red color for title */
            margin-bottom: 20px;
        }

        .product-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .product-card {
            width: calc(30% - 20px); /* Adjust the width for three columns */
            margin-bottom: 40px;
            background-color: lightsteelblue; /* White background for card */
            padding: 10px; /* Adjust the padding as needed */
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Shadow effect */
            transition: transform 0.3s ease;
            position: relative;
        }

            .product-card:hover {
                transform: translateY(-5px); /* Lift the card on hover */
            }

        .product-image {
            width: 100%;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .product-title {
            font-size: 24px;
            color: blue; /* Blue color for title */
            margin-bottom: 10px;
        }

        .product-price {
            font-size: 18px;
            color: green; /* Green color for price */
            margin-bottom: 10px;
        }

        .product-description {
            font-size: 16px;
            line-height: 1.6;
        }

        .product-options {
            position: absolute;
            top: 10px;
            right: 10px;
        }

            .product-options a {
                margin-right: 5px;
                color: blue;
                text-decoration: none;
            }

            .product-options button {
                background-color: transparent;
                border: none;
                color: red;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewBag.Title</h1>
        <div class="product-container">
            @foreach (var craftwork in Model)
            {
                <div class="product-card">
                    <img src="@craftwork.ImageUrl" alt="@craftwork.ImageUrl" class="product-image">
                    <h2 class="product-title">@craftwork.Name</h2>
                    <p class="product-price">R @craftwork.Price</p>
                    <p class="product-description">@craftwork.Category</p>
                    <p class="product-description">
                        @if (craftwork.Availability)
                        {
                            <span>Available</span>
                        }
                        else
                        {
                            <span>Unavailable</span>
                        }
                    </p>
                </div>
            }
        </div>
    </div>
</body>
</html>
